files:
    "/etc/cron.d/mycron":
        mode: "000644"
        owner: root
        group: root
        content: |
            * * * * * webapp source /opt/elasticbeanstalk/support/envvars && cd /var/www/html && php artisan schedule:run >> /dev/null 2>&1

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/mycron.bak"
